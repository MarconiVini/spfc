=form_for [:admin, @addon] do |f|
  .form-group
    =f.label :name
    =f.text_field :name, class: "form-control"
  .form-group
    =f.label :type
    =f.select :type, (["Selecione"]+Addon::ALL), class: "form-control"
  .form-group
    =f.label :description
    =f.text_field :description, class: "form-control"
  .form-group
    =f.label :value
    =f.text_field :value, class: "form-control"

  .form-group
    =f.submit class: "btn btn-default"